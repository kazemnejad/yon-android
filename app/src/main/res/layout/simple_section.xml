<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:textColor="@color/black_87"
        android:textSize="19sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:id="@+id/container_4"
            style="@style/SimpleSectionContainer"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_4"
                style="@style/SimpleSectionIcon"
                android:src="@color/solidPlaceHolder"/>

            <TextView
                android:id="@+id/text_4"
                style="@style/SimpleSectionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="رستوران اکبرجوجه"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_3"
            style="@style/SimpleSectionContainer"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_3"
                style="@style/SimpleSectionIcon"
                android:src="@color/solidPlaceHolder"/>

            <TextView
                android:id="@+id/text_3"
                style="@style/SimpleSectionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="رستوران اکبرجوجه"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_2"
            style="@style/SimpleSectionContainer"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_2"
                style="@style/SimpleSectionIcon"
                android:src="@color/solidPlaceHolder"/>

            <TextView
                android:id="@+id/text_2"
                style="@style/SimpleSectionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="رستوران اکبرجوجه"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_1"
            style="@style/SimpleSectionContainer"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_1"
                style="@style/SimpleSectionIcon"
                android:src="@color/solidPlaceHolder"/>

            <TextView
                android:id="@+id/text_1"
                style="@style/SimpleSectionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="رستوران اکبرجوجه"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>