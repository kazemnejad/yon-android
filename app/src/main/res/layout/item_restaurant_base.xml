<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/material_step_1_margin"
        android:layout_marginTop="12dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/icon"
        android:text="رستوران اصغر جوجه"
        android:textColor="@color/black_87"
        android:textSize="16sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/zone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="4dp"
        android:text="انقلاب"
        android:textColor="@color/black_54"
        android:textSize="14sp"/>

    <io.yon.android.view.widget.TextViewCompatTint
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/distance"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/price"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/ic_star_16dp"
        android:text="۴.۵"
        android:textColor="#a3a3a3"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableTint="@color/colorAccent"/>

    <io.yon.android.view.widget.TextViewCompatTint
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/distance"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/distance"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/ic_attach_money_15dp"
        android:text="۳.۱"
        android:textColor="#a3a3a3"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableTint="#1B5E20"/>

    <io.yon.android.view.widget.TextViewCompatTint
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/icon"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/ic_location_on_16dp"
        android:text="۱.۲ km"
        android:textColor="#a3a3a3"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableTint="@color/zone_icon_color"/>

</merge>