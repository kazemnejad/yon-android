<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/reservation_map_view_background_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_step_1_margin"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp">

        <io.yon.android.view.widget.RestaurantMapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_step_1_margin"
            android:layout_marginRight="@dimen/material_step_1_margin"
            android:minHeight="200dp"/>

        <View
            android:id="@+id/click_disabler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"/>
    </FrameLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_close"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/close"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</LinearLayout>