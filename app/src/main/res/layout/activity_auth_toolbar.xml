<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:gravity="right"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:id="@+id/toolbar_text_main2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/toolbar_text_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="20dp"
                    android:alpha="0    "
                    android:gravity="right"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:textSize="20sp"
                    android:translationX="100dp"/>
            </FrameLayout>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/toolbar_icon_right"
                style="@style/ToolbarButton"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_menu_24dp"
                android:tint="@color/actionItemColorLight"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/toolbar_icon_more"
                style="@style/ToolbarButton.More"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_more_vert_24dp"
                android:tint="@color/actionItemColorLight"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/toolbar_icon_left"
                style="@style/ToolbarButton"
                android:src="@drawable/ic_search_24dp"
                android:tint="@color/actionItemColorLight"
                android:visibility="gone"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</merge>