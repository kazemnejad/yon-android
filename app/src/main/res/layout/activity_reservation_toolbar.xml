<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="false"
        android:layout_marginTop="24dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <TextView
            android:id="@+id/toolbar_text_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginRight="@dimen/reservation_activity_toolbar_margin_top"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/toolbar_icon_right"
                style="@style/ToolbarButton"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_close_24dp"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/toolbar_icon_more"
                style="@style/ToolbarButton.More"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_more_vert_24dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/toolbar_icon_left"
                style="@style/ToolbarButton"
                android:src="@drawable/ic_search_24dp"
                android:visibility="gone"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</merge>