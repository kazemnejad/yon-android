<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/material_step_1_margin"
    android:paddingRight="@dimen/material_step_1_margin">

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:focusable="false"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="2"
        android:stepSize="0.1"
        android:scaleY="0.4"
        android:scaleX="0.4"
        android:layout_marginRight="-76dp"
        android:theme="@style/RatingBarTheme"/>

    <TextView
        android:id="@+id/label_by"
        style="@style/UserReviewInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rating_bar"
        android:layout_marginTop="-20dp"
        android:text="@string/by"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_by"
        android:layout_alignTop="@+id/label_by"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/label_by"
        android:text="نقی"
        android:textColor="@color/black_38"
        android:textSize="13sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/label_on"
        style="@style/UserReviewInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/username"
        android:layout_alignTop="@+id/username"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/username"
        android:text="@string/on"/>

    <TextView
        android:id="@+id/datetime"
        style="@style/UserReviewInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_on"
        android:layout_alignTop="@+id/label_on"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/label_on"/>

    <TextView
        android:id="@+id/text"
        android:gravity="right"
        android:layout_gravity="right"
        android:textColor="@color/black_87"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/label_by"
        android:layout_marginTop="8dp"/>

</RelativeLayout>