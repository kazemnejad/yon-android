<resources>

    <!-- Base application theme. -->
    <style name="AppThemeParent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppThemeParent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DrawerActivity"/>

    <style name="AppTheme.AuthActivity">
        <item name="android:windowBackground">@color/authActivityBackgroundColor</item>
    </style>

    <style name="AppTheme.MainActivity" parent="AppTheme.DrawerActivity">
        <item name="android:windowBackground">@color/mainActivityBackgroundColor</item>
    </style>

    <style name="AppTheme.RestaurantViewActivity" parent="AppTheme.DrawerActivity">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.ReservationActivity">

    </style>

    <style name="AppTheme.ReservationResultActivity">
        <item name="android:windowBackground">@color/reservationResultActivityBackgroundColor</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:layout_width">@dimen/material_min_touch_space</item>
        <item name="android:layout_height">@dimen/material_min_touch_space</item>
        <!--<item name="android:background">?attr/controlBackground</item>-->
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ToolbarButton.More">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <!--<item name="android:background">?attr/controlBackground</item>-->
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ToolbarDropShadow">
        <item name="android:visibility">visible</item>
    </style>

    <style name="ToolbarOptionMenu" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="PrimaryColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AccentColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GoogleSignInButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BannerCard">
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="SimpleSectionContainer">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <!--<item name="android:background">@drawable/round_button_light</item>-->
    </style>

    <style name="SimpleSectionIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SimpleSectionText">
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SimpleSectionTitle">

    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RestaurantMapSwitcherTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="InfoLabel">
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableTint">@color/colorPrimary</item>
    </style>

    <style name="InfoItem">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ff9500</item>
        <item name="colorControlActivated">#e7e7e7</item>
    </style>

    <style name="UserReviewInfoLabel">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black_38</item>
    </style>

    <style name="ReservationIndicatorItem">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="drawableTint">#b3b3b3</item>
    </style>

    <style name="ReservationIndicatorDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:alpha">0.7</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/black_38</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="MapViewTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
