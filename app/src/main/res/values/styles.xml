<resources>

    <!-- Base application theme. -->
    <style name="AppThemeParent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppThemeParent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DrawerActivity"></style>

    <style name="AppTheme.AuthActivity">
        <item name="android:windowBackground">@color/authActivityBackgroundColor</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:layout_width">@dimen/material_min_touch_space</item>
        <item name="android:layout_height">@dimen/material_min_touch_space</item>
        <item name="android:background">?attr/controlBackground</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ToolbarButton.More">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">?attr/controlBackground</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ToolbarDropShadow">
        <item name="android:visibility">visible</item>
    </style>

    <style name="ToolbarOptionMenu" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="PrimaryColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AccentColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GoogleSignInButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>
