<resources>

    <!-- Base application theme. -->
    <style name="AppThemeParent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppThemeParent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DrawerActivity"></style>

    <style name="AppTheme.AuthActivity">
        <item name="android:windowBackground">@color/authActivityBackgroundColor</item>
    </style>

    <style name="AppTheme.MainActivity" parent="AppTheme.DrawerActivity">
        <item name="android:windowBackground">@color/mainActivityBackgroundColor</item>
    </style>

    <style name="AppTheme.RestaurantViewActivity" parent="AppTheme.DrawerActivity">

    </style>

    <style name="ToolbarButton">
        <item name="android:layout_width">@dimen/material_min_touch_space</item>
        <item name="android:layout_height">@dimen/material_min_touch_space</item>
        <!--<item name="android:background">?attr/controlBackground</item>-->
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ToolbarButton.More">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <!--<item name="android:background">?attr/controlBackground</item>-->
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ToolbarDropShadow">
        <item name="android:visibility">visible</item>
    </style>

    <style name="ToolbarOptionMenu" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="PrimaryColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AccentColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GoogleSignInButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BannerCard">
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="SimpleSectionContainer">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <!--<item name="android:background">@drawable/round_button_light</item>-->
    </style>

    <style name="SimpleSectionIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SimpleSectionText">
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SimpleSectionTitle">

    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
